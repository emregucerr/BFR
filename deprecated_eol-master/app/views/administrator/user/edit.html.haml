- if @user != current_user
  = link_to I18n.t(:login_to_the_website_as, :username => @user.username), login_as_user_administrator_user_path(@user), :data => { :confirm => I18n.t(:admin_login_confirmation, :name => @user.username) }
= eol_lang_error_messages_for :user if request.post?
