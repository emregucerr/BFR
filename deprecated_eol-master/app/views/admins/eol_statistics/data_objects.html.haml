= render 'menu'
#statistics_data_object.main_container
  .copy
    %h2= t(".page_header")
  = render 'download_form'  
  = will_paginate @stats, :previous_label => I18n.t(:pagination_previous), :next_label => I18n.t(:pagination_next)
  %table.standard
    %caption
      = t(".page_header")
    %thead
      %tr
        - report_attributes.each do |attribute|
          %th= I18n.t("activerecord.attributes.eol_statistic.#{attribute}")
    %tbody
      - @stats.each do |s|
        %tr
          %td= number_with_delimiter(s.data_objects)
          %td= number_with_delimiter(s.data_objects_texts)
          %td= number_with_delimiter(s.data_objects_images)
          %td= number_with_delimiter(s.data_objects_videos)
          %td= number_with_delimiter(s.data_objects_sounds)
          %td= number_with_delimiter(s.data_objects_maps)
          %td= number_with_delimiter(s.data_objects_trusted)
          %td= number_with_delimiter(s.data_objects_unreviewed)
          %td= number_with_delimiter(s.data_objects_untrusted)
          %td= number_with_delimiter(s.data_objects_trusted_or_unreviewed_but_hidden)
          %td= s.created_at.strftime("%Y-%m-%d")
  = will_paginate @stats, :previous_label => I18n.t(:pagination_previous), :next_label => I18n.t(:pagination_next)
