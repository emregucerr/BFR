= content_for :head do
  = javascript_include_tag "ckeditor/init"

#content_page_new
  .article.copy
    = form_for @news_item, :url => admin_news_items_path, :builder => ApplicationHelper::EolFormBuilder do |news_item_form|
      = validation_errors_for(@news_item)

      %p.tip
        = raw(I18n.t(:admin_news_item_new_tip, :required_icon => image_tag('v2/icon_required.png', :alt => '')))
      = render 'news_item_fieldset', {:news_item_form => news_item_form}

      %fieldset
        %h3= I18n.t(:admin_translated_news_item_new_header)
        = render 'admins/translated_news_items/translated_news_item_fieldset'

      %fieldset.actions
        = news_item_form.submit I18n.t('helpers.submit.news_item.create')
        = link_to I18n.t(:cancel), admin_news_items_path
