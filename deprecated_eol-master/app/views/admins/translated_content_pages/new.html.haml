= content_for :head do
  = javascript_include_tag "ckeditor/init"

#content_page_new
  .article.copy
    = form_for [@content_page, @translated_content_page], :url => admin_content_page_translations_path(@content_page),
      :builder => ApplicationHelper::EolFormBuilder do |content_page_form|
      = validation_errors_for(@content_page)
      %fieldset
        %p.tip= raw I18n.t(:admin_translated_content_page_new_tip, :required_icon => image_tag('v2/icon_required.png', :alt => ''))
        = render 'translated_content_page_fieldset', {:content_page_form => content_page_form}

      %fieldset.actions
        = content_page_form.submit I18n.t('helpers.submit.translated_content_page.create')
        = link_to I18n.t(:cancel), admin_content_pages_path
