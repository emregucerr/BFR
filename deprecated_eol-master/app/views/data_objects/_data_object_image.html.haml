- data_object ||= @data_object
- taxon_concept ||= nil
- size ||= '260_190'
- alt ||= alternative_text(data_object, 'image', @taxon_concept)
- if local_assigns.has_key?(:thumbnail) && thumbnail
  %a{ :data => { :data_object_id => data_object.id }, :href => data_object_path(data_object), :class => 'image' }
    = image_tag data_object.thumb_or_object(size), :alt => alt
- elsif data_object.access_image_from_remote_server?(size)
  = link_to(image_tag(data_object.object_url, :alt => alt), @data_object.object_url)
- else
  = link_to(image_tag(data_object.thumb_or_object(size), :alt => alt), @data_object.thumb_or_object(:orig))
