var $add_cmd = $('#<%= @data_point_uri.anchor %>').removeClass('hidden').next().find('div.additional_commands');
var $hide = $add_cmd.find('a.hide.button');
if($hide.length > 0) {
  $hide.show();
} else {
  $add_cmd.append("<%= escape_javascript link_to(I18n.t(:data_row_hide_button), data_point_uri_hide_path(@data_point_uri), method: :put, class: 'hide button', remote: true) %>");
}
$add_cmd.find('a.unhide.button').hide();
