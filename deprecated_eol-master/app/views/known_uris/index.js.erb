$('div#suggestions .child').hide();
var $next = $("#category_<%= @category.id %>").next();
if($next.hasClass('child')) {
  while($next.hasClass('child')) {
    var $that = $next;
    $next = $next.next();
    $that.remove();
  }
} else {
  $("#category_<%= @category.id %>").after('<%= escape_javascript render('index') %>');
  var $next = $("#category_<%= @category.id %>").next();
  while($next.hasClass('child')) {
    $next.show();
    $next = $next.next();
  }
}

