.session.join
  %h3.assistive= I18n.t(:login_or_create_account)
  %p= raw I18n.t(:join_eol_community_html)
  %p{:class => @home_page ? 'button' : nil}= link_to(raw(I18n.t(:join_eol_button_html)), new_user_path)
  %p
    = I18n.t(:already_a_member_question)
    - return_to = current_url(false).gsub(/return_to=.*?&/, '')
    = link_to I18n.t(:sign_in), login_path(:return_to => return_to.include?(login_path) ? nil : return_to)

