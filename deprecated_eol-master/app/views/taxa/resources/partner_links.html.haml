- content_for :social_sharing do
  = render 'shared/social_sharing'
#taxon_resources
  = render 'menu'
  .main_container
    .copy
      %h3= I18n.t(:taxon_partner_links_header)
      - if @links.empty?
        .empty
          %p= I18n.t(:taxon_partner_links_empty)
          %p= link_to I18n.t(:taxon_partner_links_empty_learn_more_link), cms_page_path('partners')
      - else
        %p= raw(I18n.t(:taxon_partner_links_intro, eol_api_link: url_for(controller: 'api/docs', action: 'index', only_path: false)))
        %table.standard
          %thead
            %tr
              %th
                = I18n.t(:logo_header)
              %th
                = I18n.t(:name)
              %th
                = I18n.t(:external_link_header)
          %tbody
            - @links.each do |outlink|
              - if outlink
                %tr
                  %td
                    - logo = outlink[:hierarchy_entry].hierarchy.resource ? image_tag(outlink[:hierarchy_entry].hierarchy.resource.content_partner.logo_url, alt: "") : image_tag('v2/logos/partner_default.png')
                    - if outlink[:hierarchy_entry].hierarchy.url.blank?
                      - if cp = outlink[:hierarchy_entry].hierarchy.content_partner
                        = link_to logo, cp
                      - else
                        = logo
                    - else
                      = link_to logo, outlink[:hierarchy_entry].hierarchy.url
                  %td
                    = outlink[:hierarchy_entry].hierarchy.display_title
                  %td
                    = link_to hierarchy_outlink_collection_types(outlink[:hierarchy_entry].hierarchy), outlink[:outlink_url], rel: :nofollow
