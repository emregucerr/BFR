- content_for :title do
  = t('admin2.sidebar.advanced.recaptcha')

.content-card-header
  %h1.content-card-header-title
    = t('admin2.sidebar.advanced.recaptcha')
.content-card-section-container
  = form_for @current_community, url: update_recaptcha_admin2_advanced_recaptcha_index_path, html: { class: %i[content-card-section-form], remote: true }, method: :patch do |form|
    %section.content-card-section
      %h2= t('admin2.sidebar.advanced.recaptcha')
      %p.ingress
        = t('admin2.recaptcha.info_text')
        %br
        %br
        = t('admin2.recaptcha.info_text_2', url: 'https://docs.google.com/document/d/1AdGRFAxQkc_g9UP-IUtwAwo5eOAvGGOw2md-LjybR60/#heading=h.494l1flawb5i').html_safe
      .form-group
        = form.label :recaptcha_site_key, t('admin2.recaptcha.recaptcha_site_key')
        = form.text_field :recaptcha_site_key, class: %i[form-control]
      .form-group
        = form.label :recaptcha_secret_key, t('admin2.recaptcha.recaptcha_secret_key')
        = form.text_field :recaptcha_secret_key, class: %i[form-control]
    %section.content-card-terminal
      = render 'admin2/submit_button', caption: t('admin2.save_changes')
